<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:views="mailer.views.*" xmlns:modules="modules.*">
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayList;
			import mx.collections.IList;

			import mailer.views.EmailFormEvent;

			[Bindable]
			private var collection:IList=new ArrayList;

			private function submitForm(event:EmailFormEvent):void {
				collection.addItem(event.email);
			}
		]]>
	</fx:Script>

	<s:layout>
		<s:VerticalLayout paddingTop="10" paddingBottom="10" paddingLeft="10" paddingRight="10" gap="10" horizontalAlign="left" verticalAlign="top"/>
	</s:layout>

	<views:EmailForm submit="submitForm(event)" width="100%"/>
	<s:List dataProvider="{collection}" width="100%" height="100%" itemRenderer="mailer.views.EmailRenderer"/>
	<s:ModuleLoader url="modules/Module.swf" width="100%" height="30"/>
</s:Application>
